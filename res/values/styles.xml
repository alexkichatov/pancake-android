<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Pancake" parent="android:Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Pancake.Settings" parent="android:Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance"></style>

    <style name="header_text_label">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="detail_list_image">
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="detail_list_item">
        <item name="android:paddingLeft">30dp</item>
    </style>

    <style name="detail_list_label">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">16sp </item>
    </style>

    <style name="detail_list_value">
        <item name="android:maxLines">3</item>
        <item name="android:paddingBottom">10dp</item>
        <!-- <item name="android:paddingLeft">30dp</item> -->
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="edit_details">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="detail_header_text1">
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail_header_text2">
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="detail_title">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#3F434F</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="header_2_text_label">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="menu_item">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/textcolor</item>
    </style>

    <style name="menulist_item">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/textcolor</item>
    </style>

    <style name="text_label">
        <item name="android:textSize">@dimen/deatailscreen_textsize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">1dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:paddingLeft">1dip</item>
        <item name="android:paddingRight">1dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_row_value">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">30dip</item>
        <item name="android:layout_marginRight">1dip</item>
        <item name="android:layout_marginTop">2dip</item>
        <item name="android:paddingLeft">7dip</item>
        <item name="android:paddingRight">1dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="edit_text_layout">
        <item name="android:width">180dip</item>
        <item name="android:capitalize">none</item>
        <item name="android:autoText">false</item>
    </style>

    <style name="button_style">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">8dip</item>
    </style>

    <style name="signin_button_style">
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sigin_color</item>
        <item name="android:background">@drawable/siginin_selector</item>
    </style>

    <style name="list_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:focusable">false</item>
        <item name="android:height">40dip</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="list_item_2_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:focusable">false</item>
        <item name="android:height">40dip</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginLeft">3dip</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="empty_textview_style">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:paddingTop">20dip</item>
        <item name="android:paddingBottom">20dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent_1</item>
        <item name="android:background">@null</item>
    </style>

</resources>